<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.java.mapper.BoardMapper">
  	<select id="selectAll" resultType="com.java.dto.MemberDto">
  		<!-- select * from board order by bgroup desc, bstep asc -->
      
      <!-- 게시글 전체 가져오기 -->
      select bno,id,btitle,bcontent,to_char(bdate, ‘yyyy-MM-dd') 
      as bdate, btitle, bgroup,bstep,bindent,bfile from board
  	</select>

    <!-- 게시글 1개 가져오기 -->
    <select id="selectOne" resultType="com.java.dto.BoardDto">
    select * from board where bno=#{bno}
    </select> 

    <!-- 게시글 1개 저장  -->
    <insert id="insertOne" resultType="com.java.dto.BoardDto">
    insert into board values (board_seq.nextval,'bbb','제목','내용',
    sysdate,0, board_seq.currval,0,0,#{bfile});
    </insert> 
  
  </mapper>

